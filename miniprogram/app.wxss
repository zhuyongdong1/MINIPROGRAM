/**app.wxss**/
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

view, text, navigator, button, input, image {
  box-sizing: border-box;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

/* 主色按钮 */
.btn-primary {
  background: linear-gradient(135deg, #6e80e1, #4e64e7);
  color: #ffffff;
  border-radius: 44rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(110, 128, 225, 0.3);
}

/* 次级按钮 */
.btn-secondary {
  border: 1px solid #6e80e1;
  color: #6e80e1;
  border-radius: 44rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
}

/* 分隔线 */
.divider {
  height: 1px;
  background-color: rgba(0, 0, 0, 0.05);
  width: 100%;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 标题样式 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.see-all {
  font-size: 26rpx;
  color: #6e80e1;
  font-weight: normal;
}

/* 标签样式 */
.tag {
  font-size: 22rpx;
  color: #6e80e1;
  background-color: rgba(110, 128, 225, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

/* 书籍封面样式 */
.book-cover {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 文本截断 */
.text-ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 页面底部安全区域，避免被tabBar遮挡 */
.safe-bottom {
  height: 140rpx;
} 
