/* components/book-list/book-list.wxss */
.book-list-container {
  width: 100%;
}

/* 列表标题样式 */
.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.list-more {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.more-icon {
  margin-left: 6rpx;
  font-size: 22rpx;
}

/* 横向滚动列表样式 */
.scroll-list {
  width: 100%;
  white-space: nowrap;
}

.book-items {
  display: flex;
  padding: 10rpx 0;
  padding-left: 30rpx;
}

.book-item {
  display: inline-flex;
  flex-direction: column;
  width: 200rpx;
  margin-right: 20rpx;
}

.book-cover-container {
  position: relative;
  width: 100%;
  height: 280rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.book-cover {
  width: 100%;
  height: 100%;
}

.book-tag {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #ff6b6b;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-bottom-left-radius: 8rpx;
}

.book-info {
  padding: 10rpx 6rpx;
}

.book-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-desc {
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 网格列表样式 */
.grid-list {
  width: 100%;
  padding: 10rpx 30rpx;
}

.grid-items {
  display: grid;
  grid-gap: 20rpx;
  padding: 10rpx 0;
}

.grid-item {
  display: flex;
  flex-direction: column;
}

.grid-item .book-cover-container {
  height: 320rpx;
}

.book-score {
  display: flex;
  align-items: baseline;
  margin-top: 6rpx;
}

.score-value {
  color: #ff6b6b;
  font-size: 26rpx;
  font-weight: 600;
}

.score-text {
  color: #999;
  font-size: 22rpx;
  margin-left: 4rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
} 