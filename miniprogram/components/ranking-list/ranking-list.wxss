/* components/ranking-list/ranking-list.wxss */
.ranking-list-container {
  width: 100%;
  padding: 0 30rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.see-all {
  font-size: 26rpx;
  color: #6e80e1;
}

.ranking-list {
  width: 100%;
}

.ranking-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.ranking-number {
  width: 48rpx;
  height: 48rpx;
  background-color: #f0f0f5;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #8a8a8a;
  flex-shrink: 0;
}

.ranking-number.top {
  background: linear-gradient(135deg, #6e80e1, #4e64e7);
  color: white;
}

.ranking-info {
  flex-grow: 1;
}

.book-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.book-meta {
  display: flex;
  font-size: 24rpx;
  color: #8a8a8a;
}

.meta-item {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.meta-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.meta-text {
  font-size: 24rpx;
} 