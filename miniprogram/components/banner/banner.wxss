/* components/banner/banner.wxss */
.banner-container {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.banner {
  width: 100%;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.05);
}

.banner-item {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
} 